# Application
APP_ENV=development
DEBUG=True
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000

# OpenAI
OPENAI_API_KEY=sk-proj-placeholder_replace_with_your_actual_openai_key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Qdrant Cloud
QDRANT_URL=https://your-cluster-url.qdrant.io
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_COLLECTION_NAME=book_content

# Neon Serverless Postgres
DATABASE_URL=postgresql://username:password@your-neon-host.neon.tech/dbname?sslmode=require

# Authentication
AUTH_SECRET=your-32-char-random-secret-here

# Session management
SESSION_COOKIE_NAME=session_token
SESSION_MAX_AGE=604800

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=10
